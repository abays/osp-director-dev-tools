apiVersion: osp-director.openstack.org/v1beta1
kind: OpenStackNet
metadata:
  name: storagemgmt
spec:
  cidr: 172.16.3.0/24
  vlan: 40
  allocationStart: 172.16.3.4
  allocationEnd: 172.16.3.250
  attachConfiguration:
    nodeNetworkConfigurationPolicy:
      nodeSelector:
        node-role.kubernetes.io/worker: ""
      desiredState:
        interfaces:
        - bridge:
            options:
              stp:
                enabled: false
            port:
            - name: {{ osp_interface }}
          description: Linux bridge with {{ osp_interface }} as a port
          name: br-osp
          state: up
          type: linux-bridge
